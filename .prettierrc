{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 140,
    "useTabs": false,
    "bracketSameLine": true,
    "plugins": ["prettier-plugin-blade", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "bracketSameLine": false
            }
        }
    ]
}
